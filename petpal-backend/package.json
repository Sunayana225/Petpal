{
  "name": "petpal-backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:prod": "set NODE_ENV=production && node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "build:prod": "set NODE_ENV=production && tsc",
    "clean": "if exist dist rmdir /s /q dist",
    "prebuild": "npm run clean",
    "postbuild": "echo Build completed successfully",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "echo Linting not configured yet",
    "deploy": "npm run build:prod && npm run start:prod"
  },
  "keywords": [
    "pet-food-safety",
    "veterinary-database",
    "pet-nutrition",
    "food-toxicity",
    "animal-health",
    "pet-care",
    "ai-powered",
    "express-api",
    "typescript",
    "multi-pet-support",
    "dogs",
    "cats",
    "rabbits",
    "hamsters",
    "birds",
    "turtles",
    "fish",
    "lizards",
    "snakes",
    "open-source",
    "veterinary",
    "vet",
    "toxicity",
    "poisoning-prevention",
    "pet-health",
    "gemini-ai",
    "food-safety"
  ],
  "author": "Sunayana225",
  "license": "MIT",
  "description": "AI-powered tool to check if food is safe for pets. Uses veterinary data + Gemini fallback. Works for 9 pet types. Backend API (Express + TypeScript).",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/supertest": "^6.0.3",
    "autoprefixer": "^10.4.21",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "supertest": "^7.1.3",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
