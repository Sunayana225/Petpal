# Gemini API Configuration (Primary AI Service)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Configuration (Backup - Optional)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# Production Configuration
# Set NODE_ENV=production for production deployment
# CORS_ORIGIN=https://your-frontend-domain.com
# API_BASE_URL=https://your-api-domain.com

# Security Configuration
# Generate a secure random string for JWT if implementing auth later
# JWT_SECRET=your_jwt_secret_here

# Database Configuration (if you add a database later)
# DATABASE_URL=your_database_connection_string

# External API Configuration
# OPEN_PET_FOOD_FACTS_API=https://world.openpetfoodfacts.org
# DOG_FOOD_API_KEY=your_dog_food_api_key_if_available

# Logging Configuration
LOG_LEVEL=info
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
