# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Gemini API Configuration (Primary AI Service)
GEMINI_API_KEY=your_production_gemini_api_key_here

# OpenAI API Configuration (Backup - Optional)
OPENAI_API_KEY=your_production_openai_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration - Add your frontend domains
CORS_ORIGIN=https://your-frontend-domain.com,https://your-app-domain.com

# API Configuration
API_BASE_URL=https://your-api-domain.com

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters

# Database Configuration (when you add a database)
DATABASE_URL=your_production_database_connection_string

# External API Configuration
OPEN_PET_FOOD_FACTS_API=https://world.openpetfoodfacts.org

# Logging Configuration
LOG_LEVEL=warn
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
REDIS_URL=your_redis_connection_string_for_caching
